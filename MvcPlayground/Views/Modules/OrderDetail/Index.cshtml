@using MvcPlayground.Models.Framework
@using MvcPlayground.Models.Order;

@{
    var order = (Order)Model;
    var customer = new MvcPlayground.DataManager().Customers.First();
}

<div class="page-header clearfix ng-scope">
    <h1 class="pull-left">
        <span>Order #@order.Id</span>
    </h1>
    <div class="pull-right">
        <ul class="breadcrumb">
            
            <li>Orders</li>
            <li class="separator">
                <i class="icon-angle-right"></i>
            </li>
            <li class="active">#@order.Id</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="box clearfix">
            <div class="box-header">
                Order Information
            </div>
            <div class="form-inline">
                <label class="control-label">Status</label>
                <div class="form-group">
                    <select class="form-control">
                        <option>@order.Status</option>
                    </select>
                </div>
                &nbsp; 
                <label class="control-label">Date</label>
                <div class="form-group">
                    <input type="date" class="form-control" value="@order.Date.ToString("yyyy-MM-dd")" />
                </div>
                &nbsp; 
                <label class="control-label">Job Name</label>
                <div class="form-group">
                    <input type="text" class="form-control" value="@order.Type" />
                </div>
                <div class="pull-right">
                    <select class="form-control">
                        <option>Notes</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="box">
            <div class="box-header">
                Client Details
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Billing Address</label>
                        <div class="row">
                            <div class="col-lg-8">
                                <select class="form-control">
                                    <option>Main Address</option>
                                </select>
                            </div>
                            <div class="col-lg-4">
                                <a class="btn">
                                    <i class="icon-plus"></i>Add
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8">
                                <select class="form-control">
                                    <option>Main Address</option>
                                </select>
                            </div>
                            <div class="col-lg-4">
                                <a class="btn">
                                    <i class="icon-plus"></i>Add
                                </a>
                            </div>
                        </div>
                    </div>
                    <address>
                        @customer.Street<br />
                        @customer.City, @customer.State @customer.Zip<br />
                        United States
                    </address>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Shipping Address</label>
                        <div class="row">
                            <div class="col-lg-8">
                                <select class="form-control">
                                    <option>Main Address</option>
                                </select>
                            </div>
                            <div class="col-lg-4">
                                <a class="btn">
                                    <i class="icon-plus"></i>Add
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8">
                                <select class="form-control">
                                    <option>Main Address</option>
                                </select>
                            </div>
                            <div class="col-lg-4">
                                <a class="btn">
                                    <i class="icon-plus"></i>Add
                                </a>
                            </div>
                        </div>
                    </div>
                    <address>
                        @customer.Street<br />
                        @customer.City, @customer.State @customer.Zip<br />
                        United States
                    </address>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="box">
            <div class="box-header">
                Order Details
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>In Hand Date</label>
                        <input type="date" class="form-control" />
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Customer PO</label>
                        <input type="text" class="form-control" placeholder="PO" />
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Terms</label>
                        <select class="form-control">
                            <option>Net 30</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Event Type</label>
                        <select class="form-control">
                            <option>Advertising</option>
                        </select>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Sales Rep</label>
                        <select class="form-control">
                            <option>Jessie Pinkman</option>
                        </select>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Global Tax</label>
                        <select class="form-control">
                            <option>HON</option>
                        </select>
                    </div>
                </div>
            </div>
            <input type="checkbox" />
            This is a sample order
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="box products-in-order" ng-controller="OrdersCtrl">
            <div class="box-header">
                Products
            <div class="actions">
                <div class="btn-group">
                    <a href="javascript:void(0)" class="btn btn-default" ng-model="tab" ng-repeat="tab in orderTabs" ng-class="{'btn-primary active' : tab.active }" ng-click="changeTab(tab)">{{tab.title}}
                    </a>
                    <!--
                    <a class="btn btn-default" href="javascript:void();">Decorations
                    </a>
                    <a class="btn btn-default" href="javascript:void();">Shipping
                    </a>
                    <a class="btn btn-default" href="javascript:void();">Purchase Order
                    </a>
                    -->
                </div>
            </div>
            </div>
            <div ng-include="tab.content"></div>


        </div>
    </div>
</div>
<script>$('body').removeClass('modal-open'); $('.modal-backdrop').remove();</script>